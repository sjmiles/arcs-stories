import 'ChatWrapper.manifest'
import 'ShowChatMessages.manifest'
import 'ComposeMessage.manifest'

# bootstrap chat view
#store Messages of [Message] #chat in 'chat.json'

recipe
  create #chat as messages
  map #identity as user
  map #identities as people
  ChatWrapper
    messages <- messages
    people <- people
  ShowChatMessages
    people <- people
    messages = messages
    user <- user
  ComposeMessage
    messages = messages
    user <- user